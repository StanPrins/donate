		<column name="school_id" type="integer" size="11" required="true" />
		<foreign-key foreignTable="school" onDelete="cascade"
			onUpdate="cascade">
			<reference local="school_id" foreign="school_id" />
		</foreign-key>
		<column name="name" type="varchar" size="16" required="true" />
